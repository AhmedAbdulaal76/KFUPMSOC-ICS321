<% layout("layouts/boilerplate") %>
<div class="container d-flex justify-content-center align-items-center mt-3">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow mb-5">
                <img crossorigin="anonymous" src="/images/football.jpeg"
                alt="" class="card-img-top">
                <h5 class="card-title mt-3 ms-3">New Card</h5>
                <div class="card-body">
                    <form action="/tournaments/<%= tournament.tr_id %>/matches/<%= match.match_id %>/cards" method="POST" novalidate class="validated-form" enctype='application/x-www-form-urlencoded'>
                        <div class="my-3"> 
                            <div class="dropdown my-3">
                                <button class="btn btn-info dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                  Booked Player
                                </button>
                                <ul class="dropdown-menu">
                                    <% if(playersData.length == 0){ %>
                                        <a href="#">No Players</a>
                                    <% } else {%>
                                        <% for(player of playersData){ %>
                                                <li><button class="dropdown-item" id="player"><%= player.member.name %></button></li>  
                                        <% } %>
                                    <% } %>
                                </ul>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                                <label class="form-check-label" for="flexSwitchCheckDefault">Red Card</label>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                                <label class="form-check-label" for="flexSwitchCheckDefault">Sent Off</label>
                            </div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div>
                            <div class="my-3"> <label for="goal" class="form-label">Booking Time</label>
                                <input class="form-control" type="number" name="goal" id="goal"
                                placeholder="" autofocus required maxlength="3" min="0">
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="my-3 d-grid gap-2">
                                    <button type="button" class="btn btn-success">Update Match Cards</button> 
                                </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>