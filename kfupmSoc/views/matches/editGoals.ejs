    <% layout("layouts/boilerplate") %>
    <div class="container d-flex justify-content-center align-items-center mt-3">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card shadow mb-5">
                    <img crossorigin="anonymous" src="/images/football.jpeg"
                    alt="" class="card-img-top">
                    <h5 class="card-title mt-3 ms-3">New Goal!!</h5>
                    <div class="card-body">
                        <form action="/tournaments/<%= tournament[0].tr_id %>/matches/<%= match[0].match_id %>/goals" method="POST" novalidate class="validated-form" enctype='application/x-www-form-urlencoded'>
                            <div class="my-3"> <label for="scorer" class="form-label">Scorer</label>
                                <div name="scorer" class="dropdown my-3" id="scorer">
                                    <button class="btn btn-info dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                      Choose Player
                                    </button>
                                    <ul class="dropdown-menu">
                                        <% if(playersData.length == 0){ %>
                                            <a href="#">No Players</a>
                                        <% } else {%>
                                            <% for(player of playersData){ %>
                                                    <li><button class="dropdown-item" id="player"><%= player.member.name %></a></li>  
                                            <% } %>
                                        <% } %>
                                    </ul>
                                </div>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div>
                                <div class="my-3"> <label for="goal" class="form-label">Goal Time</label>
                                    <input class="form-control" type="number" name="goal" id="goal"
                                    placeholder="" autofocus required maxlength="3">
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>
                                <div class="my-3 d-grid gap-2">
                                        <button type="button" class="btn btn-success">Update Match Goals</button> 
                                    </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>