<% layout("layouts/boilerplate") %>
    <div class="container d-flex justify-content-center align-items-center mt-3">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card shadow mb-5">
                    <img crossorigin="anonymous" src="/images/football.jpeg"
                    alt="" class="card-img-top">
                    <h5 class="card-title mt-3 ms-3">Register</h5>
                    <div class="card-body">
                        <form id="first" action="/register" method="POST" class="validated-form" novalidate>
                            <div class="my-3"> <label for="fname" class="form-label">First Name</label>
                                <input class="form-control" type="text" name="fname" id="fname"
                                    placeholder="First Name" required autofocus>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="my-3"> <label for="lname" class="form-label">Last Name</label>
                                    <input class="form-control" type="text" name="lname" id="lname"
                                        placeholder="Last Name" required autofocus>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="my-3"> <label for="phonenumber" class="form-label">Phone Number</label>
                                        <input class="form-control" type="tel" name="phonenumber" id="phonenumber"
                                            placeholder="+966540000000" autofocus required>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="my-3 d-grid gap-2"> 
                                <button id="verifyReg" type="button" class="btn btn-success">Verify Phone</button> 
                            </div>
                            <div id="otpDiv" hidden>
                                <div class="my-3"> <label for="otp" class="form-label">OTP</label>
                                    <input class="form-control" type="text" name="otp" id="otp"
                                    placeholder="OTP" autofocus required maxlength="6">
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>
                                <div class= "my-3 d-grid gap-2" id="recaptcha-container"></div>
                                <div class="my-3 d-grid gap-2">
                                        <button id="regSubmit" type="button" class="btn btn-success">Register</button> 
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script src="https://www.google.com/recaptcha/api.js"></script>