<% layout("layouts/boilerplate") %>
    <h1>Team Registered in <%= tournament.tr_name %></h1>
    <% if(teams){ %>
        <% for(let team of teams){ %>
            <% if(team.tr_id == id){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img crossorigin="anonymous" src="/images/football.jpeg" alt="" class="img-fluid w-100 h-100">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                               Team <%= team.team_id %>
                            </h5>

                            <p>
                                <a href="/tournaments/<%= id %>/teams/<%=team.team_uuid%>">View Team <%= team.team_id%></a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
            <% } %>

        <% } else {%>
            <h2>No Tournaments initiatied yet</h2>
            <% } %>